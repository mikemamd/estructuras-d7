/**
 * Construye la URL de la imagen
 * @param null $fid (fid de la imagen)
 * @return string ($ulr)
 */
function structureCommon_getimg($fid = NULL) {
  $url = '';
  if ($fid) {
    // Get url from image
    $file = file_load($fid);
    $uri  = $file->uri;
    $url  = file_create_url($uri);
  } // end if

  return $url;
}
